package booking;

import java.util.Scanner;

public class Movie {
    public String movieName;

    public boolean selectMovie(Scanner sc) {
        while (true) {
            System.out.println("\nSelect Movie:");
            System.out.println("1. Leo");
            System.out.println("2. Jawan");
            System.out.println("3. Avatar 2");
            System.out.print("Enter choice: ");

            if (!sc.hasNextInt()) {
                System.out.println("Invalid input. Please enter a number 1-3.");
                sc.nextLine();
                System.out.println("Please enter a valid movie choice (1-3).");
                continue;
            }
            int choice = sc.nextInt();
            sc.nextLine();

            switch (choice) {
                case 1: movieName = "Leo"; break;
                case 2: movieName = "Jawan"; break;
                case 3: movieName = "Avatar 2"; break;
                default:
                    System.out.println("Invalid movie selection (choose 1-3).");
                    System.out.println("Please enter a valid movie choice (1-3).");
                    continue;
            }
            System.out.println("Selected Movie: " + movieName);
            return true;
        }
    }
}
